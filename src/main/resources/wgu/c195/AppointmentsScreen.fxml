<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="533.0" prefWidth="1250.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AppointmentsController">
    <children>
        <TableView fx:id="appointmentTable" layoutX="33.0" layoutY="83.0" prefHeight="361.0" prefWidth="1176.0">
            <columns>
                <TableColumn fx:id="appointmentIDCol" prefWidth="34.0" text="ID" />
                <TableColumn fx:id="titleCol" prefWidth="114.0" text="Title" />
                <TableColumn fx:id="descriptionCol" prefWidth="135.0" text="Description" />
            <TableColumn fx:id="locationCol" prefWidth="123.0" text="Location" />
                <TableColumn fx:id="contactCol" prefWidth="119.0" text="Contact" />
                <TableColumn fx:id="typeCol" prefWidth="158.0" text="Type" />
                <TableColumn fx:id="startCol" prefWidth="153.0" text="Start" />
                <TableColumn fx:id="endCol" prefWidth="144.0" text="End" />
            <TableColumn fx:id="customerIDCol" minWidth="0.0" prefWidth="121.0" text="Customer ID" />
            <TableColumn fx:id="userIDCol" prefWidth="74.0" text="User ID" />
            </columns>
        </TableView>
        <Button layoutX="61.0" layoutY="464.0" mnemonicParsing="false" onAction="#onReturnToMainButtonCLick" text="Return to Main" />
        <Button layoutX="803.0" layoutY="464.0" mnemonicParsing="false" onAction="#onAddApptButtonClick" text="Add" />
        <Button layoutX="929.0" layoutY="464.0" mnemonicParsing="false" onAction="#onUpdateApptButtonClick" text="Update" />
        <Button layoutX="1081.0" layoutY="464.0" mnemonicParsing="false" onAction="#onDeleteApptButtonClick" text="Delete" />
        <Label layoutX="37.0" layoutY="25.0" text="Meetings">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
      <RadioButton fx:id="allApptRadio" layoutX="311.0" layoutY="33.0" mnemonicParsing="false" onAction="#onSelectAllAppt" text="All Appointments">
         <toggleGroup>
            <ToggleGroup fx:id="appointmentToggle" />
         </toggleGroup></RadioButton>
      <RadioButton fx:id="internalApptRadio" layoutX="543.0" layoutY="33.0" mnemonicParsing="false" onAction="#onSelectInternalRadio" text="Internal" toggleGroup="$appointmentToggle" />
      <RadioButton fx:id="externalApptRadio" layoutX="715.0" layoutY="33.0" mnemonicParsing="false" onAction="#onSelectExternalRadio" text="External" toggleGroup="$appointmentToggle" />
      <TextField fx:id="searchField" layoutX="874.0" layoutY="27.0" onAction="#onSearchMeetings" prefHeight="39.0" prefWidth="335.0" promptText="Search by ID, Title, or Location" />
    </children>
</AnchorPane>
